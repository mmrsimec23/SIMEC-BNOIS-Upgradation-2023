@model Infinity.Bnois.Api.Web.Models.ResetPasswordSmsViewModel
@{
    ViewBag.Title = "Reset password";
}

<link href="~/Content/registration.css" rel="stylesheet" />
<link href="~/Content/font-awesome.min.css" rel="stylesheet" />

@using (Html.BeginForm("reset-password-sms", "core/authentication", FormMethod.Post, new { @class = "", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Code)

    <div class="register-form">
        <div class="container">
            <div class="row main">
                <div class="panel-heading">
                    <div class="panel-title text-center">
                        <a href="#">
                            <img src="../../Content/images/BNLogo.jpg" class="logo img-responsive" alt="LOGO">
                        </a>
                        <h4 class="title">
                            @ViewBag.Title
                        </h4>
                    </div>
                </div>
                <div class="main-login main-center">
                    <h4>Enter your phone number</h4>
                    <hr />
                    <div class="form-group">
                        @Html.LabelFor(m => m.PhoneNumber, new { @class = "cols-md-2 control-label" })
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-phone fa" aria-hidden="true"></i></span>
                                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", @placeholder = "Enter your phone number" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" style="padding: 5px 15px" class="btn btn-lg btn-block custom-btn-primary" value=""><i class="fa fa-repeat" aria-hidden="true"></i> Reset</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <footer class="footer-section">
        <div class="row">
            <div class="col-xs-12">
                <p>
                    <span class="footer-right-powered">Powered by </span><span class="footer-right-text">
                        <img src="../../Images/InfinityLogo.png" width="17" alt="">
                        Infinity Technology International Ltd
                    </span>
                </p>
            </div>
        </div>
    </footer>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
