@{
    ViewBag.Title = "Index";
}



<div class="register-form">
    <div class="container">
        <div class="row main">
            <div class="panel-heading">
                <div class="panel-title text-center">
                    <a href="#">
                        <img src="../../Content/images/BNLogo.jpg" class="logo img-responsive" alt="LOGO">
                    </a>
                </div>
            </div>
            <div class="main-login main-center">
                <h4 class="title">Please enter the code sent to your mobile device.</h4>
                <hr />
                <form method="post">
                    @if (ViewData["message"] != null)
                    {
                    <div class="row">
                        <div class="alert alert-danger">
                            <a href="#" class="close" data-dismiss="alert">&times;</a>
                            <strong>Error:</strong>
                            @ViewData["message"]
                        </div>
                    </div>
                    }
                    <div class="form-group">
                        <label for="code">Code</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-code" aria-hidden="true"></i></span>
                                <input type="text" id="code" class="form-control" name="code" placeholder="Enter your code">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" style="padding: 5px 15px" class="btn btn-lg btn-block custom-btn-primary"><i class="fa fa-sign-in" aria-hidden="true"></i> Verify</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<footer class="footer-section">
    <div class="row">
        <div class="col-xs-12">
            <p>
                <span class="footer-right-powered">Powered by </span><span class="footer-right-text">
                    <img src="../../Images/InfinityLogo.png" width="17" alt="">
                    Infinity Technology International Ltd
                </span>
            </p>
        </div>
    </div>
</footer>
