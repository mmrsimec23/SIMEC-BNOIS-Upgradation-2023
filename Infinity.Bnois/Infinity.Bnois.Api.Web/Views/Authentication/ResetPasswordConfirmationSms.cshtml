@model Infinity.Bnois.Api.Web.Models.ResetPasswordSmsViewModel
@{
    ViewBag.Title = "Reset your password";
}

@using (Html.BeginForm("reset-password-confirmation-sms", "core/authentication", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true)

<div class="register-form">
    <div class="container">
        <div class="row main">
            <div class="panel-heading">
                <div class="panel-title text-center">
                    <a href="#">
                        <img src="../../Content/images/BNLogo.jpg" class="logo img-responsive" alt="LOGO">
                    </a>
                </div>
            </div>
            <div class="main-login main-center">
                <h4 class="title">@ViewBag.Title</h4>
                <hr />
                <div class="form-group">
                    @Html.LabelFor(m => m.PhoneNumber, new { @class = "cols-md-2 control-label" })
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-phone" aria-hidden="true"></i></span>
                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", @placeholder = "Enter your phone number"  })
                        </div>
                        @Html.ValidationMessageFor(m => m.PhoneNumber, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Code, new { @class = "cols-md-2 control-label" })
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-code" aria-hidden="true"></i></span>
                            @Html.TextBoxFor(m => m.Code, new { @class = "form-control", @placeholder = "Enter your code"  })
                        </div>
                        @Html.ValidationMessageFor(m => m.Code, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "cols-md-2 control-label" })
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-lock" aria-hidden="true"></i></span>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Enter your password"  })
                        </div>
                        @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "cols-md-2 control-label" })
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-unlock-alt" aria-hidden="true"></i></span>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Enter your confirm password"  })
                        </div>
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" style="padding: 5px 15px" class="btn btn-lg btn-block custom-btn-primary"><i class="fa fa-sign-in" aria-hidden="true"></i> Reset</button>
                </div>
            </div>
        </div>
    </div>
</div>

<footer class="footer-section">
    <div class="row">
        <div class="col-xs-12">
            <p>
                <span class="footer-right-powered">Powered by </span><span class="footer-right-text">
                    <img src="../../Images/InfinityLogo.png" width="17" alt="">
                    Infinity Technology International Ltd
                </span>
            </p>
        </div>
    </div>
</footer>






}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
